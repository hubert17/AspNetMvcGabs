<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:title" content="BernardGabon.com" />
    <meta property="og:url" content="http://www.bernardgabon.com" />
    <meta property="og:description" content="Gabs portal for PHINMA-COC IT/Multimedia/Web students." />
    <title>@ViewBag.Title - Bernard Gabon [dot] com</title>
    
    @if(TempData["AlertMessage"] != null)
    {
        <script>
            alert('@TempData["AlertMessage"]')
        </script>
    }
    @if (HttpContext.Current.Request.IsLocal)
    {
        <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
        <link href="@Url.Content("~/Content/site.css")" rel="stylesheet">
        <script src="@Url.Content("~/Scripts/modernizr-2.8.3.js")"></script>
    }
    else
    {
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link href="@Url.Content("~/Content/site.css")" rel="stylesheet">
        <script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" integrity="sha256-0rguYS0qgS6L4qVzANq4kjxPLtvnp5nn2nB5G1lWRv4=" crossorigin="anonymous"></script>
    }

    <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-101849593-1', 'auto');
          ga('send', 'pageview');
    </script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BernardGabon.com", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown hidden">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Home <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Facebook Groups <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="https://www.facebook.com/groups/aspnetmvcgabs/" target="_blank">Advance Web Development</a></li>
                            <li><a href="https://www.facebook.com/groups/multimediaitphinmacoc/" target="_blank">Multiemedia-IT</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Under construction</li>
                            <li><a href="#">Desktop Publishing</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">WebApps <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="http://poordooytify.azurewebsites.net" target="_blank">Poordooytify</a></li>
                            <li><a href="https://github.com/hubert17/AspNetMvcGabs" target="_blank">Github Repository</a></li>
                            <li><a href="@Url.Action("Livedemo", "Home")">Controller / Actions</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Advance Web-1</li>
                            <li><a href="#">Hello</a></li>
                            <li><a href="#">Madam Kapalaran</a></li>
                            <li><a href="#">Next Activity</a></li>
                            <li><a href="@Url.Action("Index", "Geocities", new { firstname = "Bernard", age = 12 })">A very modern website. Haha!</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Advance Web-2</li>
                            <li><a href="#">Coming soon</a></li>
                            <li><a href="#">More apps</a></li>
                        </ul>
                    </li>
                    @if (Request.IsAuthenticated && (User.IsInRole("admin") || (User.Identity.Name == "owner")))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Projects <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("CreateProject","Project")">Create</a></li>
                                <li><a href="@Url.Action("Index","Project")">Submit</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Submit Project <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="http://bernardgabon.azurewebsites.net/Project">via Azure [Fast]</a></li>
                                <li><a href="@Url.Action("Index","Project")">with Somee [This]</a></li>
                            </ul>
                        </li>
                    }

                    @if (Request.IsAuthenticated && (User.IsInRole("admin") || (User.Identity.Name == "owner") ))
                    {
                        <li>@Html.ActionLink("User Roles", "Index", "Roles")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }        

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bernard S. Gabon</p>
        </footer>
    </div>

@if (HttpContext.Current.Request.IsLocal)
{
    <script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/respond.min.js")"></script>
}
else
{
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="//ajax.aspnetcdn.com/ajax/respond/1.4.2/respond.min.js"></script>   
}
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $('#nextAll').nextAll().remove();
        });
    </script>
    <hr id="nextAll" style="display:none;" />
</body>
</html>

