@model MyAspNetMvcApp.Models.Lessons.Song


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <form method="post">
            <label for="@nameof(Model.Title)">Title</label>
            <input type="text" name="@nameof(Model.Title)" id="@nameof(Model.Title)" />
            <br />
            <label for="@nameof(Model.Artist)">Artist</label>
            <input type="text" name="@nameof(Model.Artist)" id="@nameof(Model.Artist)" />
            <br />
            <label for="@nameof(Model.Genre)">Genre</label>
            <input type="text" name="@nameof(Model.Genre)" id="@nameof(Model.Genre)" />
            <br />
            <label for="@nameof(Model.ReleaseYear)">ReleaseYear</label>
            <input type="text" name="@nameof(Model.ReleaseYear)" id="@nameof(Model.ReleaseYear)" />
            <button type="submit">Submit</button>
        </form>

    </div>

    <div>
        <table>
            <tr>
                <td>Title:</td>
                <td>@Model.Title</td>
            </tr>
            <tr>
                <td>Artist:</td>
                <td>@Model.Artist</td>
            </tr>
            <tr>
                <td>Genre</td>
                <td>@Model.Genre</td>
            </tr>
            <tr>
                <td>Release year:</td>
                <td>@Model.ReleaseYear</td>
            </tr>
        </table>
    </div>
</body>
</html>
